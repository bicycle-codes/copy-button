{
  "name": "@nichoth/copy-button",
  "description": "Copy button made with web components",
  "type": "module",
  "directories": {
    "example": "example",
    "test": "test"
  },
  "version": "0.0.5",
  "files": [
    "./dist/*"
  ],
  "exports": {
    ".": [
      "./dist/index.js"
    ],
    "./min": [
      "./dist/index.min.js"
    ],
    "./bundle": [
      "./dist/index.bundle.js"
    ],
    "./*": [
      "./dist/*.js",
      "./dist/*"
    ]
  },
  "scripts": {
    "lint": "eslint \"./**/*.{ts,js}\"",
    "build-tests": "esbuild test/index.ts --target=es2020 --bundle --keep-names > test/test-bundle.js",
    "test": "npm run lint && npm run build && npm run build-tests && npm run test-tape-run",
    "test-tape-run": "cat test/index.html | tape-run --input=html --static=test | tap-arc",
    "build-esm": "esbuild ./src/*.js --format=esm --keep-names --outdir=./dist --sourcemap=inline",
    "build-esm:bundle": "esbuild ./src/*.js --bundle --format=esm --keep-names --minify --outdir=./dist --out-extension:.js=.bundle.js --sourcemap=inline",
    "build-esm:min": "esbuild ./src/*.js --bundle --format=esm --keep-names --minify --outdir=./dist --out-extension:.js=.min.js --sourcemap",
    "build-css": "cp ./src/style.css ./dist",
    "build": "mkdir -p ./dist && rm -rf ./dist/* && npm run build-esm && npm run build-esm:min && npm run build-esm:bundle && npm run build-css",
    "start": "vite",
    "preversion": "npm run lint",
    "version": "auto-changelog -p --template keepachangelog --breaking-pattern 'BREAKING CHANGE:' && git add CHANGELOG.md",
    "postversion": "git push --follow-tags && npm publish",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@nichoth/tonic": "^15.3.4",
    "clipboard-copy": "^4.0.1"
  },
  "devDependencies": {
    "@bicycle-codes/tapzero": "^0.9.2",
    "@nichoth/debug": "^0.6.7",
    "@preact/preset-vite": "^2.8.1",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "auto-changelog": "^2.4.0",
    "esbuild": "^0.20.1",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "postcss-nesting": "^12.0.3",
    "preact": "^10.19.6",
    "tap-arc": "^1.2.2",
    "tape-run": "^11.0.0",
    "typescript": "^5.3.3",
    "vite": "^5.1.6"
  },
  "author": "nichoth <nichoth@gmail.com> (https://nichoth.com)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nichoth/copy-button.git"
  },
  "keywords": [
    "copy",
    "button",
    "html"
  ],
  "bugs": {
    "url": "https://github.com/nichoth/copy-button/issues"
  },
  "license": "MIT",
  "homepage": "https://github.com/nichoth/copy-button#readme"
}
