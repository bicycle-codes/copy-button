{
  "name": "@bicycle-codes/copy-button",
  "description": "Copy button made with web components",
  "type": "module",
  "directories": {
    "example": "example",
    "test": "test"
  },
  "version": "0.0.7",
  "files": [
    "./dist/*"
  ],
  "exports": {
    ".": [
      "./dist/index.js"
    ],
    "./bundle": [
      "./dist/bundle.js"
    ],
    "./min": [
      "./dist/bundle.min.js"
    ],
    "./*.css": [
      "./dist/style.css"
    ],
    "./min/*.css": [
      "./dist/style.min.css"
    ],
    "./*": [
      "./dist/*.js",
      "./dist/*"
    ]
  },
  "scripts": {
    "lint": "eslint \"./src/*.js\"",
    "build-tests": "esbuild test/index.ts --target=es2020 --bundle --keep-names > test/test-bundle.js",
    "test": "npm run lint && npm run build && npm run build-tests && npm run test-tape-run",
    "test-tape-run": "cat test/index.html | tape-run --input=html --static=test | tap-arc",
    "build-css": "postcss src/style.css --use postcss-nesting > dist/style.css",
    "build-css:min": "mkdir -p ./dist/css && postcss src/style.css --use cssnano --use postcss-nesting > dist/style.min.css",
    "build-esm": "tsc --project tsconfig.build.json",
    "build-bundle": "esbuild --keep-names --bundle --tsconfig=tsconfig.build.json --outfile=dist/bundle.js src/index.ts",
    "build-bundle:min": "esbuild --keep-names --bundle --tsconfig=tsconfig.build.json --minify --outfile=./dist/bundle.min.js ./src/index.ts",
    "build-example": "vite --base \"/copy-button/\" build",
    "build": "mkdir -p ./dist && rm -rf ./dist/* && npm run build-esm && npm run build-bundle && npm run build-bundle:min && npm run build-css && npm run build-css:min",
    "start": "vite",
    "preversion": "npm run lint",
    "version": "auto-changelog -p --template keepachangelog --breaking-pattern 'BREAKING CHANGE:' && git add CHANGELOG.md",
    "postversion": "git push --follow-tags && npm publish",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {},
  "devDependencies": {
    "@bicycle-codes/tapzero": "^0.9.2",
    "@nichoth/debug": "^0.6.7",
    "auto-changelog": "^2.4.0",
    "cssnano": "^7.0.1",
    "esbuild": "^0.20.1",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.0",
    "postcss-nesting": "^12.0.3",
    "tap-arc": "^1.2.2",
    "tape-run": "^11.0.0",
    "typescript": "^5.4.4",
    "vite": "^5.1.6"
  },
  "author": "nichoth <nichoth@gmail.com> (https://nichoth.com)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bicycle-codes/copy-button.git"
  },
  "keywords": [
    "copy",
    "button",
    "html"
  ],
  "bugs": {
    "url": "https://github.com/bicycle-codes/copy-button/issues"
  },
  "license": "MIT",
  "homepage": "https://github.com/bicycle-codes/copy-button#readme"
}
